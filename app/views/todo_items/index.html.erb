<div class="row">
  <div class="col-sm-10">
    <h1>All Tasks</h1>
  </div>
  <div class="col-sm-2">
    <%= link_to 'New Todo Item', new_todo_item_path, class: 'btn btn-primary' %>   
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Task</th>
      <th>Notes</th>
      <th>Response</th>
      <th>Completed</th>
      <th>Todo list</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.task %></td>
        <td><%= todo_item.notes %></td>
        <td><%= todo_item.response %></td>
        <td>
          <%= !todo_item.completed_at.nil? ? 'Yes' : 'No' %>
        </td>
        <td><%= todo_item.todo_list.title %></td>
        <td><%= todo_item.user.first_name %></td>
        <td><%= link_to 'Show', todo_item %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
