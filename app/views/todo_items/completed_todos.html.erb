<h1 class="display-3 my-5">Completed Tasks</h1>
<h3>
  Number Completed: <%= @completed_todos.count %>
</h3>
<div class="table-responsive">
  <table id="myTable" class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Task</th>
        <th>Notes</th>
        <th>Response</th>
        <th>Completed On</th>
        <th>User</th>
      </tr>
    </thead>

    <tbody>
      <% @completed_todos.each do |todo| %>
        <tr class="<%= todo.completed ? 'table-success' : '' %>">
          <td><%= link_to todo.task, todo %></td>
          <td><%= truncate(todo.notes, length: 40) %></td>
          <td><%= truncate(todo.response, length: 40) %></td>
          <td><%= todo.completed_at.strftime("%m/%d/%Y") %></td>
          <td><%= link_to todo.user.first_name, my_todos_path(user_id: todo.user.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%#= will_paginate @completed_todos, list_classes: %w(pagination justify-content-center) %>
</div>
